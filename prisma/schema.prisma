// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("CONNECTION_STRING")
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model Product {
  admin_graphql_api_id String
  body_html            String?
  created_at           DateTime?
  handle               String?
  id                   BigInt    @id
  product_type         String?
  published_at         DateTime?
  template_suffix      String?
  title                String?
  updated_at           DateTime?
  vendor               String?
  status               String?
  published_scope      String?
  tags                 String?
}
